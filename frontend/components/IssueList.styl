.issue-list
  border: 1px solid #3c790a
  width: 800px
  padding: 5px 0 0 5px
  display: inline-block

  > h1
    font-size: 20px
    font-weight: bold
    margin-bottom: 10px

  .filter
    color: #777
    font-size: 12px
    margin-bottom: 5px

    &:hover
      color: #4078C0

  .issue-container
    list-style-type: none
    margin: 0
    padding: 0

    height: 800px
    overflow-y: scroll
