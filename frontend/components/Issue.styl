.issue
  padding: 12px
  border-top: solid 1px #eee

  &:hover
    background: #F5F5F5

  .title
    line-height: 1.25
    font-size: 16px
    font-weight: bold

  .labels
    li
      display: inline-block
      padding: 3px 4px
      font-size: 11px
      font-weight: bold
      line-height: 1
      border-radius: 2px
      box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.12)
      margin-right: 4px

  .extra-info
    color: #767676
    font-size: 12px
    margin-top: 3px

    a
      color: #767676

      &:hover
        color: #4078C0
